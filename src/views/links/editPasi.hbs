    const diaNaciemiento = parseInt(String(fecha_nacimiento).substring(8, 10));
    let edad_ = anoActual - anoNaciemiento;
    if(mesActual < mesNaciemiento){
      edad_--;
    }else if(mesActual === mesNaciemiento){
      if(diaActual < diaNaciemiento){
        edad_--;
      }
    }
    return edad_;
    console.log(edad_);
  };

